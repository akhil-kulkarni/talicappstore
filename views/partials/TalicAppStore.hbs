<style>
	.row {
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-flex-wrap: wrap;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
	}
	.row .col-lg-6, .row .col-md-6, .row .col-sm-6 {
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-flex: 1 auto;
		-ms-flex: 1 auto;
		flex: 1 auto;
	}
	.product-wrap {
		width: 100%;
	}
</style>
<form name="loginForm">
	<div class="top-head">
		<div class="top-head-h4-div">
			<h4>Talic App Store</h4>
		</div>
		<div class="top-head-div">
			<div class="loginAsDiv">
				<h4>login as: </h4>
			</div>
			<div class="loginFormWrapper">
				<div>
					<select id="username" name="username">
						<option value="dev">developer</option>
						<option value="admin">admin</option>
					</select>
				</div>
				<div>
					<input id="password" name="password" type="password" value="Tata_001" placeholder="Password"/>
				</div>
				<div>
					<input type="button" onclick="loginFormSubmit()" value="Submit"/>
				</div>
			</div>
		</div>
	</div>
</form>
<div class="container">
	<div class="products">
		<div class="row">
			{{#if file}}
				{{#each file}}
					<div class="col-sm-6 col-md-6 col-lg-6">
						<div class="product-wrap">
							<div class="img-circle center-block product-img glide">
								<h3><span style="width: 150px; word-wrap: break-word;">{{projectName}}</span></h3>
							</div>
							<p>Version No: {{appVersionNumber}}</p>
							<p>Size: {{fileSize}}</p>
							<p>Uploaded By: {{#if fileUpdatedBy}} {{fileUpdatedBy}} {{else}} {{fileCreatedBy}}{{/if}}</p>
							<p>Total Downloads: {{totalDownloads}}</p>
							<p>Last Downloaded On: {{lastDownloadedOn}}</p>
							<p>Release Date: {{fileUpdatedOn}} </p>
							<p>Release Note: </p>
							<ol>
							{{#each changeLog}}
								<li>{{this}}</li>
							{{/each}}
							</ol>
							<form name={{_id}} method="GET" enctype="multipart/form-data" action="/download">
								<input type="hidden" name="_id" value="{{_id}}"/>
								<input type="hidden" name="filePath" value="{{filePath}}"/>
								{{#if isapk}}
									<div class="text-center">
										<a class="btn btn-danger no-radius android-icon" onclick="downloadFile(this)">
											<i class="fa fa-android fa-lg"></i>
											Download for Android
										</a>
									</div>
								{{/if}}
								<!-- todo: link multiple files (apk, ipa) to same project/ release -->
								{{#if isipa}}
									<div class="text-center">
										<a class="btn btn-danger no-radius ios-icon" href={{itms}}>
											<i class="fa fa-apple fa-lg"></i>
											Download for iOS
										</a>
									</div>
								{{/if}}
							</form>
						</div>
					</div>
				{{/each}}
			{{else}}
				<h4 style="padding: 20px;"> No files available to download!</h4>
			{{/if}}
		</div>
	</div>
</div>
